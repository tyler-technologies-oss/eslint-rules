{
  "name": "@tylertech-eslint/eslint-plugin",
  "version": "1.0.0",
  "description": "Common TypeScript lint rules/preferences for Tyler Technologies. Compatible with ESLint v9+ (Flat Config only).",
  "type": "module",
  "exports": {
    ".": "./dist/index.esm.js",
    "./configs/recommended": "./dist/configs/recommended.js"
  },
  "main": "dist/index.js",
  "typings": "typings/index.d.ts",
  "scripts": {
    "build": "rimraf ./dist && microbundle --tsconfig tsconfig.build.json --no-sourcemap --target=node --compress --format=esm && ncp ./src/configs ./dist/configs",
    "build:publish": "rimraf ./publish && npm run build && gulp publish",
    "test": "jest --coverage",
    "gulp": "gulp",
    "rimraf": "rimraf"
  },
  "keywords": [
    "eslint",
    "rules",
    "typescript",
    "lint",
    "linting",
    "linter"
  ],
  "author": "Tyler Technologies, Inc.",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/tyler-technologies-oss/eslint-rules.git",
    "directory": "packages/eslint-plugin"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "@typescript-eslint/utils": "^8.33.0"
  },
  "devDependencies": {
    "@types/eslint": "^9.6.1",
    "@types/estree": "^1.0.7",
    "@types/gulp": "^4.0.17",
    "@types/jest": "^29.5.14",
    "@types/ncp": "^2.0.8",
    "@types/rimraf": "^4.0.5",
    "eslint": "^9.27.0",
    "gulp": "^5.0.0",
    "jest": "^29.1.0",
    "microbundle": "^0.15.1",
    "ncp": "^2.0.0",
    "rimraf": "^6.0.1",
    "standard-changelog": "^7.0.1",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "eslint": ">=9.0.0",
    "typescript": "*"
  }
}