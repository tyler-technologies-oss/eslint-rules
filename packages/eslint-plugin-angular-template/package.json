{
  "name": "@tylertech-eslint/eslint-plugin-angular-template",
  "version": "1.0.0",
  "description": "Common angular template lint rules/preferences for Tyler Technologies. Compatible with ESLint v9+ (Flat Config only).",
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./configs/recommended": "./dist/configs/recommended.config.js"
  },
  "main": "dist/index.js",
  "typings": "typings/index.d.ts",
  "scripts": {
    "build": "rimraf ./dist && microbundle --tsconfig tsconfig.build.json --no-sourcemap --target=node --compress --format=esm && ncp ./src/configs ./dist/configs",
    "build:publish": "rimraf ./publish && npm run build && gulp publish",
    "gulp": "gulp",
    "rimraf": "rimraf"
  },
  "keywords": [
    "eslint",
    "rules",
    "typescript",
    "angular",
    "angular-eslint",
    "lint",
    "linting",
    "linter"
  ],
  "author": "Tyler Technologies, Inc.",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/tyler-technologies-oss/eslint-rules.git",
    "directory": "packages/eslint-plugin"
  },
  "dependencies": {
    "@angular-eslint/eslint-plugin-template": "^19.6.0",
    "@angular-eslint/template-parser": "^19.6.0",
    "@typescript-eslint/utils": "^8.33.0"
  },
  "devDependencies": {
    "@types/gulp": "^4.0.17",
    "@types/ncp": "^2.0.8",
    "@types/rimraf": "^4.0.5",
    "gulp": "^5.0.0",
    "microbundle": "^0.15.1",
    "ncp": "^2.0.0",
    "rimraf": "^6.0.1",
    "standard-changelog": "^7.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "eslint": ">=9.0.0",
    "typescript": "*"
  }
}